{
  "version": 2,
  "builds": [
    { "src": "src/api/server.ts", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "src/api/server.ts" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ],
  "functions": {
    "src/api/server.ts": { "maxDuration": 60 }
  }
}
