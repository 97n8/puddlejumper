{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@publiclogic/core": ["packages/core/dist/index.d.ts"],
      "@publiclogic/core/*": ["packages/core/dist/*"],
      "@publiclogic/logic-commons": ["apps/logic-commons/dist/index.d.ts"],
      "@publiclogic/logic-commons/*": ["apps/logic-commons/dist/*"]
    },
    "typeRoots": ["./types", "./node_modules/@types"]
  }
}
