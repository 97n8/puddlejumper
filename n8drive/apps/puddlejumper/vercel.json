{
  "version": 2,
  "builds": [
    {
      "src": "src/api/server.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "dist/**",
          "public/**",
          "../../packages/core/dist/**",
          "../../node_modules/**"
        ]
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "src/api/server.ts" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ],
  "functions": {
    "src/api/server.ts": {
      "maxDuration": 60,
      "memory": 1024
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}