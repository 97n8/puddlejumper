{
  "name": "puddle-jumper-deploy-remote",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "tsx watch src/api/server.ts",
    "start": "node dist/api/server.js",
    "build": "tsc --outDir dist",
    "vercel-build": "npm run build",
    "monorepo:build": "pnpm -w -r run build",
    "monorepo:vercel-build": "pnpm -w -r run vercel-build",
    "test": "tsx --test test/**/*.test.ts",
    "typecheck": "tsc --noEmit",
    "check:pj-contract": "node scripts/check-pj-contract.mjs",
    "ci": "npm run typecheck && npm run check:pj-contract && npm test --silent",
    "db:backup": "tsx src/api/sqliteMaintenance.ts backup",
    "db:validate-restore": "tsx src/api/sqliteMaintenance.ts validate-restore",
    "prr:backfill-public-id": "node scripts/backfill_prr_public_id.mjs"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.8.1",
    "cookie-parser": "^1.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.3",
    "zod": "^4.3.6",
    "@vercel/node": "^3.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.11",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^4.17.21",
    "@types/jsdom": "^27.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.13.1",
    "@types/supertest": "^6.0.2",
    "jsdom": "^28.0.0",
    "supertest": "^7.1.4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
