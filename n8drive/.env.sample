# Runtime configuration
NODE_ENV=development
PORT=3002
CONTROLLED_DATA_DIR=./data
ALLOW_ADMIN_LOGIN=false
ALLOW_PJ_GRAPH_TOKEN_EXCHANGE=false
DEV_MODE=true

# Service URLs
LOGIC_COMMONS_URL=http://localhost:3001
PJ_UI_URL=http://localhost:3000
PJ_PUBLIC_URL=http://localhost:3002
BASE_URL=http://localhost:3002
CONNECTOR_PUBLIC_BASE_URL=http://localhost:3002

# Authentication
JWT_SECRET=dev-secret
JWT_PUBLIC_KEY=
JWT_PRIVATE_KEY=
AUTH_ISSUER=
AUTH_AUDIENCE=
JWT_MAX_AGE_SECONDS=3600
COOKIE_DOMAIN=.publiclogic.org

# Application data stores
PRR_DB_PATH=./data/prr.db
IDEMPOTENCY_DB_PATH=./data/idempotency.db
RATE_LIMIT_DB_PATH=./data/rate_limit.db
CONNECTOR_DB_PATH=./data/connectors.db
IDEMPOTENCY_TTL_HOURS=24
CONNECTOR_STATE_SECRET=dev-connector-state-secret

# Runtime manifests (required in production)
PJ_RUNTIME_CONTEXT_JSON={}
PJ_RUNTIME_TILES_JSON=[]
PJ_RUNTIME_CAPABILITIES_JSON={}

# Authentication + login policies
PJ_LOGIN_USERS_JSON=[]
PJ_GRAPH_ADMIN_PRINCIPALS=
PJ_GRAPH_DEPLOY_PRINCIPALS=
PJ_GRAPH_ADMIN_USERS=
PJ_GRAPH_DEPLOY_USERS=
PJ_ALLOWED_PARENT_ORIGINS=http://localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000
PJ_CANONICAL_HOST_ALLOWLIST=localhost

# Access notifications
ACCESS_NOTIFICATION_WEBHOOK_URL=
ACCESS_NOTIFICATION_WORKER_INTERVAL_MS=30000
ACCESS_NOTIFICATION_WORKER_BATCH_SIZE=25
ACCESS_NOTIFICATION_WORKER_MAX_RETRIES=8

# Connector integrations
MS_TENANT_ID=common
MS_CLIENT_ID=
MS_CLIENT_SECRET=
MS_SCOPE="https://graph.microsoft.com/.default offline_access"
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_SCOPE=https://www.googleapis.com/auth/userinfo.email
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_SCOPE="read:user repo"
